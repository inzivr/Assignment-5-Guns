extends layout

block content
  h1= title
  p Welcome to our Gun Info Portal

  // Wrapper
  #wrapper

    // USER INFO
    #userInfo
      h2 Gun Info
      p
        strong Gun Model:
        |  <span id='GunName'></span>
        br
        strong Manufacturer:
        |  <span id='GunManufacturer'></span>
        br
        strong Year:
        |  <span id='userInfoName'></span>
        br
        strong Caliber:
        |  <span id='userInfoAge'></span>
        br
        strong Type:
        |  <span id='userInfoGender'></span>
        br
        strong Origin:
        |  <span id='userInfoLocation'></span>
    // /USER INFO

    // USER LIST
    h2 User List
    #userList
      table
        thead
          th Gun
          th Manufacturer
          th Type
          th Delete?
        tbody
    // /USER LIST

    // ADD USER
    h2 Add Gun Info
    #addUser
      fieldset
        input#inputUserName(type='text', placeholder='Gun Model')
        input#inputUserEmail(type='text', placeholder='Manufacturer')
        br
        input#inputUserFullname(type='text', placeholder='Make Year')
        input#inputUserAge(type='text', placeholder='Caliber')
        br
        input#inputUserLocation(type='text', placeholder='Origin')
        input#inputUserGender(type='text', placeholder='Type')
        br
        button#btnAddUser Add Gun
    // /ADD USER

  // /WRAPPER